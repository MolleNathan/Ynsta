<div class='container'>
  <div class='row'>
    <% @posts.last(6).each do |post| %>
      <div class='col-xs-4'>
        <div class='image'>
          <%= image_tag post.picture %>
          <div class='overlay'>
            <div class='heart'>

            <%= heart("white") %>
            <% post.tags.each do |tag| %>
            <div >
              <%= tag.name %>

            </div>
            <% end %>

            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
