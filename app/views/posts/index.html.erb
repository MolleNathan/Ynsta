<div class='container'>
  <div class='row'>
    <% @posts.last(6).each do |post| %>
      <div class='col-xs-4'>
        <div class='image'>
          <%= image_tag post.picture %>
          <div class='overlay'>
            <%= display_tags(post)%>
            <div class='heart'>
              <%= heart("white") %>
            </div>

            <!-- <div class='heart'>
              <%= image_tag("full_heart.jpg", size: "2x2") %>
            </div> -->


          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
