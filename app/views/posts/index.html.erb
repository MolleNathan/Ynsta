<div class='container'>
  <div class='row'>
    <% @posts.last(6).each do |post| %>
      <div class='col-xs-4'>
        <div class='image'>
          <%= image_tag post.picture %>
          <div class='overlay'>
            <div class='heart'>
              
            <% if (!user_signed_in?) %>
              <%= heart("white") %>
            <% elsif (Favorite.where("user_id = ?", :user_id).where("post_id = ?", :post_id).length == 0) %>
              <%= heart("white") %>
            <% else %>
              <%= heart("red") %>
            <% end %>

            <% post.tags.each do |tag| %>
              <%= link_to(tag.name, "/posts?tag_id=#{tag.name}&commit=search") %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
